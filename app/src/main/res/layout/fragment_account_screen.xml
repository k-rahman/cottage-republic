<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".settings.AccountFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
                android:id="@+id/account_app_bar"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:textAlignment="center"
                android:background="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/user_image">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/my_account"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp" tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="16dp"/>
        </androidx.appcompat.widget.Toolbar>
        <!-- User information -->
        <ImageView
                android:id="@+id/user_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/ic_user_icon"
                android:layout_marginStart="45dp"
                app:layout_constraintTop_toBottomOf="@+id/account_app_bar"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/john_doe"
                android:textColor="@color/colorBlack"
                android:textSize="22sp"
                android:layout_marginStart="48dp"
                android:layout_marginVertical="16dp"
                app:layout_constraintTop_toTopOf="@+id/user_image"
                app:layout_constraintStart_toEndOf="@+id/user_image"/>
        <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/john_doe_com"
                android:textSize="18sp"
                android:layout_marginStart="48dp"
                android:layout_marginVertical="8dp"
                app:layout_constraintTop_toBottomOf="@+id/user_name"
                app:layout_constraintStart_toEndOf="@+id/user_image" />

        <View
            android:id="@+id/info_divider"
            style="@style/Divider.Horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/user_image"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- User Settings -->
        <LinearLayout
                android:id="@+id/user_settings_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/info_divider"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:onClick="userSettings"
                >
        <ImageView
                android:id="@+id/user_setting_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="@color/colorBlack"
                android:textSize="30sp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/user_settings"
                app:srcCompat="@drawable/ic_settings"/>
        <TextView
                android:id="@+id/user_settings"
                android:text="@string/user_settings"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="25dp"
                android:maxLines="1"
                android:textColor="@color/colorBlack"
                android:textSize="24sp"
                android:textStyle="normal" />

        <ImageView
                android:id="@+id/user_setting_arrow_icon"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginTop="25dp"
                android:contentDescription="@string/user_settings"
                app:srcCompat="@drawable/ic_arrow_right"/>
        </LinearLayout>

        <View
                android:id="@+id/settings_divider"
                style="@style/Divider.Horizontal"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/user_settings_layout"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent"/>

        <!-- My Cottages -->
        <LinearLayout
                android:id="@+id/cottages_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/settings_divider"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:onClick="myCottages"
                >


        <ImageView
                android:id="@+id/cottage_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="@color/colorBlack"
                android:textSize="30sp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/user_settings"
                app:srcCompat="@drawable/ic_cottage"/>
        <TextView
                android:id="@+id/my_cottages"
                android:text="@string/my_cottages"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="25dp"
                android:maxLines="1"
                android:textColor="@color/colorBlack"
                android:textSize="24sp"
                android:textStyle="normal" />

        <ImageView
                android:id="@+id/cottage_arrow_icon"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginTop="25dp"
                android:contentDescription="@string/user_settings"
                app:srcCompat="@drawable/ic_arrow_right"/>
        </LinearLayout>

        <View
                android:id="@+id/reservation_divider"
                style="@style/Divider.Horizontal"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/cottages_layout"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent"/>

        <!-- My Reservations -->
        <LinearLayout
                android:id="@+id/reservation_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/reservation_divider"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:onClick="myReservation"
        >
            <ImageView
                    android:id="@+id/reservation_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="30sp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/my_reservation"
                    app:srcCompat="@drawable/ic_reservation_icon"/>
            <TextView
                    android:id="@+id/my_reservations"
                    android:text="@string/my_reservations"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginTop="25dp"
                    android:maxLines="1"
                    android:textColor="@color/colorBlack"
                    android:textSize="24sp"
                    android:textStyle="normal" />

            <ImageView
                    android:id="@+id/reservation_arrow_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_marginTop="25dp"
                    android:contentDescription="@string/user_settings"
                    app:srcCompat="@drawable/ic_arrow_right"/>
        </LinearLayout>
        <View
                android:id="@+id/reservation_bottom_divider"
                style="@style/Divider.Horizontal"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/reservation_layout"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent"/>

        <View
                android:id="@+id/logout_top_divider"
                style="@style/Divider.Horizontal"
                android:layout_marginTop="48dp"
                app:layout_constraintTop_toBottomOf="@+id/reservation_bottom_divider"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Logout -->
        <LinearLayout
                android:id="@+id/logout_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/logout_top_divider"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:onClick="logout"
        >
            <ImageView
                    android:id="@+id/logout_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="30sp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/my_reservation"
                    app:srcCompat="@drawable/ic_logout"/>
            <TextView
                    android:id="@+id/logout"
                    android:text="@string/logout"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginTop="25dp"
                    android:maxLines="1"
                    android:textColor="@color/colorBlack"
                    android:textSize="24sp"
                    android:textStyle="normal" />

            <ImageView
                    android:id="@+id/logout_arrow_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_marginTop="25dp"
                    android:contentDescription="@string/user_settings"
                    app:srcCompat="@drawable/ic_arrow_right"/>
        </LinearLayout>

        <View
                android:id="@+id/logout_bottom_divider"
                style="@style/Divider.Horizontal"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/logout_layout"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
</layout>