<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="ViewModel"
            type="fi.oamk.cottagerepublic.ui.account.AccountScreenViewModel"/>
    </data>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".settings.AccountFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/account_appbar_layout"
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/user_image">
                <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="@string/my_account"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:text="Screen Title" />

            </com.google.android.material.appbar.AppBarLayout>
            <!-- User information -->
            <ImageView
                    android:id="@+id/user_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/ic_baseline_account_circle_24"
                    android:layout_marginStart="45dp"
                    app:layout_constraintTop_toBottomOf="@+id/account_appbar_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    android:contentDescription="@string/user_image"/>
<!--            <TextView-->
<!--                    android:id="@+id/user_name"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="@string/john_doe"-->
<!--                    android:textColor="@color/colorBlack"-->
<!--                    android:textSize="22sp"-->
<!--                    android:layout_marginStart="48dp"-->
<!--                    android:layout_marginVertical="16dp"-->
<!--                    app:layout_constraintTop_toTopOf="@+id/user_image"-->
<!--                    app:layout_constraintStart_toEndOf="@+id/user_image"/>-->
<!--            <TextView-->
<!--                    android:id="@+id/user_email"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="@string/john_doe_com"-->
<!--                    android:textSize="18sp"-->
<!--                    android:layout_marginStart="48dp"-->
<!--                    android:layout_marginVertical="8dp"-->
<!--                    app:layout_constraintTop_toBottomOf="@+id/user_name"-->
<!--                    app:layout_constraintStart_toEndOf="@+id/user_image"/>-->
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{ViewModel.fullName}"
                android:textColor="@color/colorBlack"
                android:textSize="22sp"
                android:layout_marginStart="48dp"
                android:layout_marginVertical="16dp"
                app:layout_constraintTop_toTopOf="@+id/user_image"
                app:layout_constraintStart_toEndOf="@+id/user_image"/>
            <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{ViewModel.email}"
                android:textSize="18sp"
                android:layout_marginStart="48dp"
                android:layout_marginVertical="8dp"
                app:layout_constraintTop_toBottomOf="@+id/user_name"
                app:layout_constraintStart_toEndOf="@+id/user_image"/>

            <View
                    android:id="@+id/info_divider"
                    style="@style/Divider.Horizontal"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/user_image"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <!-- User Settings -->
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/user_settings_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/info_divider"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
            >
                <ImageView
                        android:id="@+id/user_setting_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:contentDescription="@string/user_settings"
                        app:srcCompat="@drawable/ic_baseline_settings_24"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/user_settings"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.0"
                        android:layout_marginStart="16dp"/>
                <TextView
                        android:id="@+id/user_settings"
                        android:text="@string/user_settings"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textColor="@color/colorBlack"
                        android:textSize="24sp"
                        android:textStyle="normal" app:layout_constraintStart_toEndOf="@+id/user_setting_icon"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/user_setting_arrow_icon"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                />

                <ImageView
                        android:id="@+id/user_setting_arrow_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/user_settings"
                        app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24"
                        app:layout_constraintStart_toEndOf="@+id/user_settings"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                    android:id="@+id/settings_divider"
                    style="@style/Divider.Horizontal"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/user_settings_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <!-- My Cottages -->
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cottages_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/settings_divider"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
            >
                <ImageView
                        android:id="@+id/cottage_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:layout_marginStart="16dp"
                        android:contentDescription="@string/user_settings"
                        app:srcCompat="@drawable/ic_baseline_house_24" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/my_cottages"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_chainStyle="spread"/>

                <TextView
                        android:id="@+id/my_cottages"
                        android:text="@string/my_cottages"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textColor="@color/colorBlack"
                        android:textSize="24sp"
                        android:textStyle="normal"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.444"
                        app:layout_constraintStart_toEndOf="@+id/cottage_icon"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/cottage_arrow_icon"/>
                <ImageView
                        android:id="@+id/cottage_arrow_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/user_settings"
                        app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24"
                        app:layout_constraintStart_toEndOf="@+id/my_cottages" app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                    android:id="@+id/reservation_divider"
                    style="@style/Divider.Horizontal"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/cottages_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <!-- My Reservations -->
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/reservation_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/reservation_divider"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
            >
                <ImageView
                        android:id="@+id/reservation_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:contentDescription="@string/my_reservation"
                        app:srcCompat="@drawable/ic_baseline_menu_book_24"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/my_reservations"
                        app:layout_constraintHorizontal_chainStyle="spread" android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"

                />

                <TextView
                        android:id="@+id/my_reservations"
                        android:text="@string/my_reservations"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textColor="@color/colorGray"
                        android:textSize="24sp"
                        android:textStyle="normal"
                        app:layout_constraintStart_toEndOf="@+id/reservation_icon"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/reservation_arrow_icon"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                />
                <ImageView
                        android:id="@+id/reservation_arrow_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/user_settings"
                        app:srcCompat="@drawable/ic_baseline_arrow_forward_unclickable"
                        app:layout_constraintStart_toEndOf="@+id/my_reservations"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                    android:id="@+id/reservation_bottom_divider"
                    style="@style/Divider.Horizontal"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/reservation_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintEnd_toEndOf="parent"/>


            <!-- Logout -->
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/logout_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="72dp"
                    app:layout_constraintTop_toBottomOf="@+id/reservation_bottom_divider"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
            >
                <ImageView
                        android:id="@+id/logout_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="30sp"
                        android:contentDescription="@string/my_reservation"
                        app:srcCompat="@drawable/ic_baseline_exit_to_app_24"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/logout"
                        app:layout_constraintHorizontal_chainStyle="spread" android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                        android:id="@+id/logout"
                        android:text="@string/logout"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textColor="@color/colorBlack"
                        android:textSize="24sp"
                        android:textStyle="normal"
                        app:layout_constraintStart_toEndOf="@+id/logout_icon"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/logout_arrow_icon"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                        android:id="@+id/logout_arrow_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/user_settings"
                        app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24"
                        app:layout_constraintStart_toEndOf="@+id/logout"
                        app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                    android:id="@+id/logout_bottom_divider"
                    style="@style/Divider.Horizontal"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/logout_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>