<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
<data>

</data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/calendar_fragment_background">

        <com.google.android.material.card.MaterialCardView
                android:id="@+id/calendar_wrapper"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:elevation="100dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="25dp"
                app:cardUseCompatPadding="false">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            >
                <com.savvi.rangedatepicker.CalendarPickerView
                        android:id="@+id/calendar"
                        android:layout_width="363dp"
                        android:layout_height="0dp"
                        android:clipToPadding="false"
                        android:scrollbarStyle="outsideOverlay"
                        app:tsquare_dividerColor="@color/colorTransparent"
                        app:tsquare_headerTextColor="@color/custom_header_text"
                        app:tsquare_orientation_horizontal="false"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/divider1"
                        android:padding="16dp"/>
                <View
                        android:id="@+id/divider1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/booking_button" android:layout_marginBottom="32dp"/>
                <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/booking_button"
                        android:text="@string/book"
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:background="@drawable/shape_continue_border"
                        android:fontFamily="@font/roboto" android:textColor="@color/colorWhite"
                        android:textAllCaps="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/nights_number"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textSize="18sp" android:layout_marginBottom="16dp" android:layout_marginEnd="16dp"/>
                <TextView
                        android:text="3 nights"
                        android:layout_width="165dp"
                        android:layout_height="wrap_content" android:id="@+id/nights_number"
                        android:fontFamily="@font/roboto" android:textSize="18sp"
                        android:textColor="@color/colorBlack" android:textAlignment="center"
                        app:layout_constraintTop_toTopOf="@+id/booking_button"
                        app:layout_constraintBottom_toBottomOf="@+id/booking_button"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/booking_button" android:textStyle="bold"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
