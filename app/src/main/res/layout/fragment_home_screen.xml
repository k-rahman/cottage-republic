<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity"
            android:orientation="vertical">

        <!-- https://developer.android.com/training/appbar/setting-up -->
        <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linearLayoutCompat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                android:layout_marginBottom="16dp">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="40dp"
                    android:text="@string/main_screen_title"
                    android:textColor="@color/colorWhite"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="Screen Title"
            />

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    android:background="@drawable/search_borders"
                    android:hint="@string/search_placeholder"
                    android:textSize="15sp"
                    android:drawableStart="@drawable/ic_baseline_search_24"
            />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <TextView
                        android:id="@+id/popular_destination_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/popular_destinations"
                        style="@style/list_header_text"/>
                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/popular_destinations_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@android:layout/simple_gallery_item"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp">
                </androidx.recyclerview.widget.RecyclerView>
                <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                />
                <TextView
                        android:id="@+id/popular_cottage_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/popular_cottages"
                        style="@style/list_header_text"
                />
                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/popular_cottages_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@android:layout/simple_gallery_item"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"/>
            </LinearLayout>
        </ScrollView>

    </androidx.appcompat.widget.LinearLayoutCompat>

