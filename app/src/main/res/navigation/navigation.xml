<?xml version="1.0" encoding="utf-8"?>
<navigation
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/navigation"
        app:startDestination="@id/homeScreenFragment"
>

    <fragment
            android:id="@+id/homeScreenFragment"
            android:name="fi.oamk.cottagerepublic.home.HomeScreenFragment"
            android:label="Home"
            tools:layout="@layout/fragment_home_screen"
    />

    <!-- Account Screens -->
    <fragment android:id="@+id/accountScreenFragment"
              android:name="fi.oamk.cottagerepublic.settings.AccountFragment"
              android:label="fragment_account"
              tools:layout="@layout/fragment_account_screen">
        <action android:id="@+id/action_accountScreenFragment_to_cottagesScreenFragment"
                app:destination="@id/cottagesScreenFragment"/>
    </fragment>
    <fragment android:id="@+id/cottagesScreenFragment"
              android:name="fi.oamk.cottagerepublic.settings.MyCottagesFragment"
              android:label="fragment_account"
              tools:layout="@layout/fragment_my_cottages_screen"/>
</navigation>